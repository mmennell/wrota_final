<div class="page-header">
  <h1>
    Roles
    <a href="/roles/new" class="btn btn-lg btn-success">New Role</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "roles_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :role_name_cont, "Role name contains" %>
    <%= f.text_field :role_name_cont, :class => "form-control", :placeholder => "Role name contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :restaurant_restaurant_name_cont, "Restaurant restaurant_name contains" %>
      <%= f.text_field :restaurant_restaurant_name_cont, :class => "form-control", :placeholder => "Restaurant restaurant_name contains" %>
    </div>

<div class="form-group">
      <%= f.label :staffs_firstname_cont, "Staff firstname contains" %>
      <%= f.text_field :staffs_firstname_cont, :class => "form-control", :placeholder => "Staff firstname contains" %>
    </div>

<div class="form-group">
          <%= f.label :start_time, "Job Start time" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='jobsgteqstart_timePicker'>
                  <%= f.text_field :jobs_start_time_gteq, :class => "form-control", :placeholder => "Job Start time greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='jobslteqstart_timePicker'>
                  <%= f.text_field :jobs_start_time_lteq, :class => "form-control", :placeholder => "Job Start time less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#jobsgteqstart_timePicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#jobslteqstart_timePicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#jobsgteqstart_timePicker').on("dp.change", function (e) {
                  $('#jobslteqstart_timePicker').data("DateTimePicker").minDate(e.date);
              });
              $('#jobslteqstart_timePicker').on("dp.change", function (e) {
                  $('#jobsgteqstart_timePicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/roles" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#roles_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Role name</th>
        <th>Description</th>
        <th>Restaurant</th>
        <th>Actions</th>
      </tr>

      <% @roles.each do |role| %>
      <tr>
        <td><%= role.role_name %></td>
        <td><%= role.description %></td>
        <td>
          <% if role.restaurant.present? %>
            <a href="/restaurants/<%= role.restaurant.id %>">
              <%= role.restaurant.restaurant_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/roles/<%= role.id %>" class="btn btn-primary">Show</a>
          <a href="/roles/<%= role.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_role/<%= role.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @roles, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
