<div class="page-header">
  <h1>
    Jobs
    <a href="/jobs/new" class="btn btn-lg btn-success">New Job</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Start time</th>
        <th>End time</th>
        <th>Role</th>
        <th>Hourly rate</th>
        <th>Bonus</th>
        <th>Bonus terms</th>
        <th>Staff</th>
        <th>Approved</th>
        <th>Actions</th>
      </tr>

      <% @jobs.each do |job| %>
      <tr>
        <td><%= job.start_time %></td>
        <td><%= job.end_time %></td>
        <td>
          <% if job.role.present? %>
            <a href="/roles/<%= job.role.id %>">
              <%= job.role.role_name %>
            </a>
          <% end %>
        </td>
        <td><%= job.hourly_rate %></td>
        <td><%= job.bonus %></td>
        <td><%= job.bonus_terms %></td>
        <td>
          <% if job.staff.present? %>
            <a href="/staffs/<%= job.staff.id %>">
              <%= job.staff.firstname %>
            </a>
          <% end %>
        </td>
        <td><%= job.approved %></td>
        <td>
          <a href="/jobs/<%= job.id %>" class="btn btn-primary">Show</a>
          <a href="/jobs/<%= job.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_job/<%= job.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @jobs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
