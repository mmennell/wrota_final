<div class="page-header">
  <h3>Job #<%= @job.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Start time</dt>
      <dd><%= @job.start_time %></dd>

      <dt>End time</dt>
      <dd><%= @job.end_time %></dd>

      <dt>Role</dt>
      <dd><%= @job.role_id %></dd>

      <dt>Hourly rate</dt>
      <dd><%= @job.hourly_rate %></dd>

      <dt>Bonus</dt>
      <dd><%= @job.bonus %></dd>

      <dt>Bonus terms</dt>
      <dd><%= @job.bonus_terms %></dd>

      <dt>Staff</dt>
      <dd><%= @job.staff_id %></dd>

      <dt>Approved</dt>
      <dd><%= @job.approved %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/jobs" class="btn btn-primary">
        Back
      </a>
      <a href="/jobs/<%= @job.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_job/<%= @job.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Job has many restaurant -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Restaurant
      </li>

      <% @job.restaurant.each do |restaurant| %>
        <li class="list-group-item">
          <a href="/restaurants/<%= restaurant.id %>">
            <%= restaurant.restaurant_name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
