<div class="page-header">
  <h1>
    Restaurants
    <a href="/restaurants/new" class="btn btn-lg btn-success">New Restaurant</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "restaurants_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :restaurant_name_cont, "Restaurant name contains" %>
    <%= f.text_field :restaurant_name_cont, :class => "form-control", :placeholder => "Restaurant name contains" %>
  </div>

<div class="form-group">
    <%= f.label :verified_eq, "Verified" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :verified_eq, "1", checked: ((params[:q] && params[:q][:verified_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :verified_eq, "0", checked: ((params[:q] && params[:q][:verified_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :verified_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :contact_telephone_cont, "Contact telephone contains" %>
    <%= f.text_field :contact_telephone_cont, :class => "form-control", :placeholder => "Contact telephone contains" %>
  </div>

<div class="form-group">
    <%= f.label :contact_name_cont, "Contact name contains" %>
    <%= f.text_field :contact_name_cont, :class => "form-control", :placeholder => "Contact name contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
  <%= f.label :longitude, "Longitude" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :longitude_gteq, :class => "form-control", :placeholder => "Longitude greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :longitude_lteq, :class => "form-control", :placeholder => "Longitude less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :latitude, "Latitude" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :latitude_gteq, :class => "form-control", :placeholder => "Latitude greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :latitude_lteq, :class => "form-control", :placeholder => "Latitude less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :staffs_firstname_cont, "Staff firstname contains" %>
      <%= f.text_field :staffs_firstname_cont, :class => "form-control", :placeholder => "Staff firstname contains" %>
    </div>

<div class="form-group">
      <%= f.label :roles_role_name_cont, "Role role_name contains" %>
      <%= f.text_field :roles_role_name_cont, :class => "form-control", :placeholder => "Role role_name contains" %>
    </div>

<div class="form-group">
          <%= f.label :start_time, "Job Start time" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='shiftsgteqstart_timePicker'>
                  <%= f.text_field :shifts_start_time_gteq, :class => "form-control", :placeholder => "Job Start time greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='shiftslteqstart_timePicker'>
                  <%= f.text_field :shifts_start_time_lteq, :class => "form-control", :placeholder => "Job Start time less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#shiftsgteqstart_timePicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#shiftslteqstart_timePicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#shiftsgteqstart_timePicker').on("dp.change", function (e) {
                  $('#shiftslteqstart_timePicker').data("DateTimePicker").minDate(e.date);
              });
              $('#shiftslteqstart_timePicker').on("dp.change", function (e) {
                  $('#shiftsgteqstart_timePicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/restaurants" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#restaurants_filters">
      Show Filters
    </a>
  </div>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant name</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Description</th>
        <th>Logo image</th>
        <th>Contact name</th>
        <th>Contact telephone</th>
        <th>User</th>
        <th>Verified</th>
        <th>Actions</th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.latitude %></td>
        <td><%= restaurant.longitude %></td>
        <td><%= restaurant.description %></td>
        <td><img src='<%= restaurant.logo_image %>' class='img-responsive'></td>
        <td><%= restaurant.contact_name %></td>
        <td><%= restaurant.contact_telephone %></td>
        <td>
          <% if restaurant.user.present? %>
            <a href="/users/<%= restaurant.user.id %>">
              <%= restaurant.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= restaurant.verified %></td>
        <td>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == restaurant.user %>
            <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @restaurants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>