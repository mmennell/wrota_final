<div class="page-header">
  <h1>
    Staffs
    <a href="/staffs/new" class="btn btn-lg btn-success">New Staff</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "staffs_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :firstname_cont, "Firstname contains" %>
    <%= f.text_field :firstname_cont, :class => "form-control", :placeholder => "Firstname contains" %>
  </div>

<div class="form-group">
    <%= f.label :verified_eq, "Verified" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :verified_eq, "1", checked: ((params[:q] && params[:q][:verified_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :verified_eq, "0", checked: ((params[:q] && params[:q][:verified_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :verified_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :contact_telephone_cont, "Contact telephone contains" %>
    <%= f.text_field :contact_telephone_cont, :class => "form-control", :placeholder => "Contact telephone contains" %>
  </div>

<div class="form-group">
    <%= f.label :lastname_cont, "Lastname contains" %>
    <%= f.text_field :lastname_cont, :class => "form-control", :placeholder => "Lastname contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :home_restaurant_restaurant_name_cont, "Restaurant restaurant_name contains" %>
      <%= f.text_field :home_restaurant_restaurant_name_cont, :class => "form-control", :placeholder => "Restaurant restaurant_name contains" %>
    </div>

<div class="form-group">
          <%= f.label :start_time, "Job Start time" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='jobsgteqstart_timePicker'>
                  <%= f.text_field :jobs_start_time_gteq, :class => "form-control", :placeholder => "Job Start time greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='jobslteqstart_timePicker'>
                  <%= f.text_field :jobs_start_time_lteq, :class => "form-control", :placeholder => "Job Start time less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#jobsgteqstart_timePicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#jobslteqstart_timePicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#jobsgteqstart_timePicker').on("dp.change", function (e) {
                  $('#jobslteqstart_timePicker').data("DateTimePicker").minDate(e.date);
              });
              $('#jobslteqstart_timePicker').on("dp.change", function (e) {
                  $('#jobsgteqstart_timePicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :role_role_name_cont, "Role role_name contains" %>
      <%= f.text_field :role_role_name_cont, :class => "form-control", :placeholder => "Role role_name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/staffs" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#staffs_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Contact telephone</th>
        <th>Photo</th>
        <th>Home restaurant</th>
        <th>User</th>
        <th>Verified</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>

      <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.firstname %></td>
        <td><%= staff.lastname %></td>
        <td><%= staff.contact_telephone %></td>
        <td><img src='<%= staff.photo %>' class='img-responsive'></td>
        <td>
          <% if staff.home_restaurant.present? %>
            <a href="/restaurants/<%= staff.home_restaurant.id %>">
              <%= staff.home_restaurant.restaurant_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if staff.user.present? %>
            <a href="/users/<%= staff.user.id %>">
              <%= staff.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= staff.verified %></td>
        <td>
          <% if staff.role.present? %>
            <a href="/roles/<%= staff.role.id %>">
              <%= staff.role.role_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/staffs/<%= staff.id %>" class="btn btn-primary">Show</a>
          <a href="/staffs/<%= staff.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_staff/<%= staff.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @staffs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
